@model IEnumerable<Entitiy.Concrete.Blog>

@{
    ViewData["Title"] = "BlogReadAll";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Detay</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: #f8f9fa;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 40px;
        }

        /* Kapak Fotoğrafı */
        .cover-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            margin-bottom: 2rem;
            border-radius: 8px;
        }

        /* Blog Bilgi Başlığı */
        .blog-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .meta-info {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1rem;
            color: #666;
            font-size: 0.9rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .blog-title {
            font-size: 2.8rem;
            font-weight: 400;
            margin-bottom: 1rem;
            color: #2d3436;
        }

        /* Ana İçerik */
        .blog-content {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            margin-bottom: 3rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.04);
        }

        /* Yorum Formu */
        .comment-section {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.04);
        }

        .comment-form {
            display: grid;
            gap: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        input, textarea {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        button {
            background: #2d3436;
            color: white;
            padding: 1rem 2rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: opacity 0.3s;
        }

        button:hover {
            opacity: 0.9;
        }

        /* Mevcut Yorumlar */
        .comments-list {
            margin-top: 2rem;
        }

        .comment {
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 6px;
            margin-bottom: 1.5rem;
        }

        .comment-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #ddd;
        }

       
        }
    </style>
</head>
<body>
    <div class="container">
        @foreach (var item in Model)
        {
            
       
        <!-- Kapak Fotoğrafı -->
        <img src="https://picsum.photos/800/400" alt="Blog Kapak" class="cover-image">

        <!-- Blog Başlık ve Bilgiler -->
        <div class="blog-header">
            <div class="meta-info">
                <span class="meta-item">📅 @item.BlogCreateDate </span>
                <span class="meta-item">❤️ 245 Beğeni</span>
                <span class="meta-item">💬 45 Yorum</span>
            </div>
            <h1 class="blog-title">@item.BlogTitle</h1>
        </div>

        <!-- Ana İçerik -->
        <article class="blog-content">
            <p> @item.BlogContent</p>
            <!-- İçerik buraya gelecek -->
        </article>

        <!-- Yorum Bölümü -->
        <section class="comment-section">
            <h2>Yorumlar (45)</h2>

            <!-- Mevcut Yorumlar -->
            <div class="comments-list">
                <div class="comment">
                    <div class="comment-header">
                        <div class="user-avatar"></div>
                        <div>
                            <h3>Ahmet Yılmaz</h3>
                            <small>14 Ekim 2023</small>
                        </div>
                    </div>
                    <p>Harika bir yazı olmuş, tebrik ederim!</p>
                </div>
            </div>

            <!-- Yorum Formu -->
            <form class="comment-form">
                <div class="form-group">
                    <input type="text" placeholder="Adınız" required>
                </div>
                <div class="form-group">
                    <input type="email" placeholder="E-posta Adresiniz" required>
                </div>
                <div class="form-group">
                    <textarea rows="5" placeholder="Yorumunuz..." required></textarea>
                </div>
                <button type="submit">Yorum Gönder</button>
            </form>
        </section>
        }
    </div>
</body>
</html>

