@using Entitiy.Concrete
@model List<Message2>


@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<table class="table  table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <th>@item.Subject</th>
            <th>@item.SenderUser.WriterName</th>
            <th>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</th>
            <th><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></th>
        </tr>
    }
</table>
<a href="" class="btn btn-primary">Yeni Mesaj Oluştur.</a>
