@model Entitiy.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile","Writer",FormMethod.Post)){

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            @Html.HiddenFor(x => x.WriterId, new {@class ="form-control"})
            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" asp-for="WriterName">
                    @Html.ValidationMessageFor(x => x.WriterName)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email" asp-for="WriterMail">
                    @Html.ValidationMessageFor(x => x.WriterMail)
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password" asp-for="WriterPassword">
                    @Html.ValidationMessageFor(x => x.WriterPassword)
                </div>
              
                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control"})              
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Yazar Seç</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="WriterAbout"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
}
