@model IEnumerable<Entitiy.Concrete.Category>
<div class="container sidebar-section">
    <div class="sidebar-box">
        <h3>Kategoriler</h3>
        @foreach (var item in Model)

        {

            <ul>
                <li><a href="#">@item.CategoryName</a></li>
            </ul>
        }
    </div>

    <div class="sidebar-box">
        <h3>Yazarın Diğer Yazıları</h3>
        <p><strong>-</strong></p>
        <p>-</p>
        <a href="#" class="read-more">Devamını Oku →</a>
    </div>
</div>

<style>
    .sidebar-section {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-top: 3rem;
    }

    .sidebar-box {
        flex: 1;
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    }

        .sidebar-box h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #2d3436;
        }

        .sidebar-box ul {
            list-style: none;
            padding: 0;
        }

            .sidebar-box ul li {
                margin-bottom: 0.8rem;
            }

                .sidebar-box ul li a {
                    text-decoration: none;
                    color: #007bff;
                    font-weight: 500;
                }

                    .sidebar-box ul li a:hover {
                        text-decoration: underline;
                    }

    .read-more {
        display: inline-block;
        margin-top: 1rem;
        color: #007bff;
        font-weight: bold;
        text-decoration: none;
    }

        .read-more:hover {
            text-decoration: underline;
        }
</style>